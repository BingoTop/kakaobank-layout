<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/notify_image"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_marginStart="10dp"
        android:id="@+id/notify_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/notify_image"
        app:layout_constraintTop_toTopOf="@+id/notify_image">

        <TextView
            android:id="@+id/notify_title"
            android:layout_marginBottom="7sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/notify_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:textSize="13dp"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="더보기"
            />
    </LinearLayout>
    <ImageButton
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:id="@+id/button5"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:src="@drawable/ic_outline_chevron_right_24"
        app:layout_constraintBottom_toBottomOf="@+id/notify_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notify_info" />

</androidx.constraintlayout.widget.ConstraintLayout>
